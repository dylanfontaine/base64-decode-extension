{
    "name": "Base 64 Decode",
    "version": "0.1",
    "description": "Add a right-click option to base64 decode text",
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.ts"
            ]
        }
    ],
    "background": {
        "service_worker": "background.ts",
        "module": true
    },
    "icons": {
        "16": "assets/icon_16.png",
        "32": "assets/icon_32.png",
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png"
    },
    "manifest_version": 3
}
